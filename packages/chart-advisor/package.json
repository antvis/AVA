{
  "name": "@antv/chart-advisor",
  "version": "2.0.0-alpha.1",
  "description": "An empiric-driven chart recommendation js library.",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "browser": "dist/index.js",
  "module": "esm/src/index.js",
  "files": [
    "src",
    "esm",
    "lib",
    "dist"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx './'",
    "lint-fix": "npm run lint -- --fix",
    "prettier": " prettier --check '**/*' --ignore-path=../../.prettierignore",
    "prettier-fix": "npm run prettier -- --write",
    "format": "npm run prettier-fix && npm run lint-fix",
    "lint-staged": "lint-staged",
    "size": "limit-size",
    "clean": "rimraf lib esm dist",
    "build:umd": "rimraf ./dist && rollup -c && npm run size",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build": "run-p build:*",
    "test": "jest",
    "watch": "yarn module && yarn build --w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antvis/ChartAdvisor.git"
  },
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/antvis/ChartAdvisor/issues"
  },
  "homepage": "https://github.com/antvis/ChartAdvisor#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rollup/plugin-node-resolve": "^13.0.2",
    "@rollup/plugin-typescript": "^8.2.3",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "limit-size": "^0.1.4",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.2",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "limit-size": [
    {
      "path": "dist/index.min.js",
      "limit": "8 Kb",
      "gzip": true
    },
    {
      "path": "dist/index.min.js",
      "limit": "24 Kb"
    }
  ],
  "dependencies": {
    "@antv/dw-analyzer": "^1.1.5",
    "@antv/dw-util": "^1.1.4",
    "@antv/ckb": "^2.0.0-alpha.1",
    "@antv/antv-spec": "^0.1.0-alpha.1",
    "@babel/runtime": "^7.14.8",
    "@rollup/plugin-json": "^4.1.0"
  }
}
