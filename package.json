{
  "name": "ava",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx \"./\"",
    "lint-fix": "npm run lint -- --fix",
    "prettier": " prettier -c \"**/*\"",
    "prettier-fix": "npm run prettier -- --write",
    "prettier:ckb": "cd ./packages/ckb && npm run prettier",
    "prettier:ca": "cd ./packages/chart-advisor && npm run prettier",
    "prettier:packages": "run-p prettier:*",
    "format": "npm run prettier-fix && npm run lint-fix",
    "format:ckb": "cd ./packages/ckb && npm run format",
    "format:ca": "cd ./packages/chart-advisor && npm run format",
    "format:packages": "run-p format:*",
    "lint-staged": "lint-staged",
    "size:ckb": "cd ./packages/ckb && limit-size",
    "size:ca": "cd ./packages/chart-advisor && limit-size",
    "size:packages": "run-p size:*",
    "test": "jest",
    "test:ca": "cd ./packages/chart-advisor && npm run test",
    "coverage": "jest --coverage",
    "clean:site": "cd ./packages/ava-site && npm run clean",
    "clean:ckb": "cd ./packages/ckb && npm run clean",
    "clean:ca": "cd ./packages/chart-advisor && npm run clean",
    "clean:packages": "lerna run clean",
    "clean": "npm run clean:packages",
    "clear:ckb": "cd ./packages/ckb && rm -rf node_modules",
    "clear:ca": "cd ./packages/chart-advisor && rm -rf node_modules",
    "clear:packages": "lerna clean -y",
    "clear:demo": "cd ./demo && rm -rf node_modules",
    "clear:root": "rimraf node_modules",
    "clear": "run-s clear:packages clear:demo clear:root",
    "cc": "npm run clean && npm run clear",
    "build:ckb": "cd ./packages/ckb && npm run build",
    "build:ca": "cd ./packages/chart-advisor && npm run build",
    "build:packages": "lerna run build",
    "build": "npm run build:packages",
    "setup:demo": "cd demo && npm install --package-lock=false",
    "start:demo": "npm run setup:demo && cd demo && npm start",
    "site:start": "cd ./packages/ava-site && npm run start",
    "test-live": "sh ./scripts/test-live",
    "boot": "lerna bootstrap",
    "one-stop-setup": "npm install --package-lock=false && run-s boot build setup:demo"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cross-env": "^7.0.2",
    "electron": "^11.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.24.0",
    "gh-pages": "^2.1.1",
    "husky": "^7.0.1",
    "jest": "^24.9.0",
    "jest-electron": "^0.1.11",
    "jest-extended": "^0.11.5",
    "lerna": "^3.15.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "rollup": "^2.56.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
